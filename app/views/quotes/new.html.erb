<h1>Create a new quote</h1>

<form action='/quotes/create' method="post">
  <table>
    <tr>
      <td>Submitter</td>
      <td><input name="quote[submitter]" type="text"/></td>
    </tr>
    <tr>
      <td>Attribution</td>
      <td><input name="quote[attribution]" type="text"/></td>
    </tr>
    <tr>
      <td>Quote</td>
      <td><input name="quote[quote]" type="text"/></td>
    </tr>
    <tr>
      <td></td>
      <td><input type="submit" value="Create!" /></td>
    </tr>
</table>
</form>